{% extends 'layouts/base.html.twig' %}

{% block title %}{{ isNew ? 'Новая торговая сеть' : 'Редактирование торговой сети' }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.logotype) }}
        {% if logotypeFileUrl is defined %}
            <img src="{{ logotypeFileUrl }}" class="mb-3" alt="Логотип ТС">
        {% endif %}
    {{ form_end(form) }}
{% endblock %}
